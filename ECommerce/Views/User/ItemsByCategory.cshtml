@using ClassLibrary1;
@model ItemsViewModel
@{
    ViewData["Title"] = "UserProducts";
}

<style>
    table, h2,h3,h4,th {
        text-align: center;
    }

    input, textarea, button {
        margin-top:20px;
    }
</style>

<h2>@Model.Category.Name</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/user/itemsByCategory" enctype="multipart/form-data">
            <h3>Add a New Item</h3>
            <input type="text" name="name" placeholder="Name" class="form-control" />
            <input type="text" name="price" placeholder="Price" class="form-control" />
            <textarea cols="6" rows="3" name="description" placeholder="Description" class="form-control"></textarea>
            <input type="file" name="image"/>
            <input type="hidden" name="categoryId" value="@Model.Category.Id"/>
            <button class="btn btn-info btn-block" style="margin-top:20px;">Add Item</button>
        </form>
    </div>
</div>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Image</th>
    </tr>
    @foreach (Item i in Model.Items)
    {
        <tr>
            <td>@i.Name</td>
            <td>@i.Price.ToString("C")</td>
            <td>@i.Description</td>
            <td>@i.Image</td>
        </tr>
    }
</table>

<h4><a href="/user/Categories">Back to Categories</a></h4>