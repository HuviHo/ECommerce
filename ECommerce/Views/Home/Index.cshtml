@using ClassLibrary1;
@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">My Ecommerce Site</p>
            <div class="list-group">
                @foreach (Category c in Model.Categories)
                {
                    <a href="/home/index?categoryId=@c.Id" class="list-group-item">@c.Name</a>
                }
            </div>
        </div>

        <div class="col-md-9">

            <div class="row">
                @foreach (Item i in Model.Items)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="~/itemsImages/@i.Image" alt="">
                            <div class="caption">
                                <h4 class="pull-right">@i.Price.ToString("C")</h4>
                                <h4>
                                    <a href="/home/product?id=@i.Id">@i.Name</a>
                                </h4>
                                <p>@i.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
